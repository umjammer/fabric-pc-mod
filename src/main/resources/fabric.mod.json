{
  "schemaVersion": 1,
  "id": "pcmod",
  "version": "${version}",
  "name": "PC Mod",
  "description": "Allows PCs to be used in Minecraft (including multiplayer) using VNC Remote desktop.",
  "authors": [
    "Peter Willemsen <peter@codebuffet.co>", "umjammer"
  ],
  "contact": {
    "homepage": "https://codebuffet.co",
    "sources": "https://github.com/peterwilli/fabric-pc-mod"
  },
  "license": "CC0-1.0",
  "icon": "assets/modid/icon.png",
  "environment": "*",
  "entrypoints": {
    "main": [
      "com.emeraldodin.minecraft.pcmod.main.PCMod"
    ],
    "client": [
      "com.emeraldodin.minecraft.pcmod.client.PCModClient"
    ]
  },
  "mixins": [
    "pcmod.mixins.json"
  ],
  "accessWidener" : "pcmod.accesswidener",
  "depends": {
    "fabricloader": ">=0.7.4",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  }
}
